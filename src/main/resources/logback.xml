<configuration scan="false">
    <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread]  %-5level %logger{50} %line: %ms%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="com.sailheader.testng.mapper" level="debug" additivity="false">
        <appender-ref ref="stdout" />
    </logger>

    <root level="info">
        <appender-ref ref="stdout" />
    </root>
</configuration>