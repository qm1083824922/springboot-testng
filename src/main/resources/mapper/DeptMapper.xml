<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sailheader.testng.mapper.DeptMapper">

    <update id="updateByDeptIdAndUserId">
        update sys_dept
        set name = '1'
        where dept_id = #{deptId}
        and user_id = #{userId}
    </update>
</mapper>